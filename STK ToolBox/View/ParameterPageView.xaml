<UserControl x:Class="STK_ToolBox.View.ParameterPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock"
             xmlns:ConLayOut="clr-namespace:STK_ToolBox.View"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:vm="clr-namespace:STK_ToolBox.ViewModels"
             mc:Ignorable="d">

    <UserControl.Resources>

        <!-- MetroTabControl 템플릿: 탭헤더 아래에 고정영역 끼워넣기 -->
        <Style TargetType="Controls:MetroTabControl" BasedOn="{StaticResource {x:Type Controls:MetroTabControl}}">
            <Setter Property="ToolTip"
                    Value="ServoParameter INI 경로, 백업, AXIS 선택을 한 번에 관리하고 각 기능 탭을 전환할 수 있습니다."/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- 탭 헤더 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 고정 영역 -->
                                <RowDefinition Height="*"/>
                                <!-- 탭 컨텐츠 -->
                            </Grid.RowDefinitions>

                            <!-- 헤더 -->
                            <UniformGrid Grid.Row="0"
                                         IsItemsHost="True"
                                         Rows="1"
                                         HorizontalAlignment="Stretch"
                                         ToolTip="Parameter 관련 기능 탭을 선택합니다." />

                            <!-- 고정 영역(빨간 체크 자리) -->
                            <Border Grid.Row="1"
                                    Background="White"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="10,8,10,0"
                                    ToolTip="INI 파일 경로/백업 및 AXIS 개수·선택을 공통으로 설정하는 영역입니다.">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- INI / 백업 -->
                                    <GroupBox Header="INI 파일"
                                              Margin="0,0,8,0"
                                              ToolTip="ServoParameter.ini 파일 경로 지정 및 백업/폴더 열기 기능을 제공합니다.">
                                        <Grid Margin="8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- ① INI 경로 + 찾아보기 -->
                                            <DockPanel LastChildFill="True" Grid.Row="0" Margin="0,0,0,6"
                                                       ToolTip="실제 사용할 ServoParameter.ini 파일 경로를 지정합니다.">
                                                <TextBlock Text="INI 경로:"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"
                                                           ToolTip="현재 선택된 ServoParameter.ini 파일 경로입니다."/>
                                                <TextBox Text="{Binding IniPath, UpdateSourceTrigger=PropertyChanged}"
                                                         Width="350"
                                                         IsReadOnly="True"
                                                         DockPanel.Dock="Left"
                                                         Margin="10,12,8,12"
                                                         FontSize="14"
                                                         ToolTip="브라우저로 선택한 INI 파일의 전체 경로가 표시됩니다. (읽기 전용)"/>
                                                <Button Content="찾아보기"
                                                        Width="80"
                                                        Height="28"
                                                        FontSize="12"
                                                        Margin="0,0,25,0"
                                                        Command="{Binding BrowseCommand}"
                                                        ToolTip="ServoParameter.ini 파일을 찾아서 선택합니다."/>
                                            </DockPanel>

                                            <!-- ② 백업 폴더 경로 + 찾아보기 + 동작 버튼 -->
                                            <DockPanel LastChildFill="True" Grid.Row="1"
                                                       ToolTip="INI 백업을 저장할 폴더 및 백업 관련 동작입니다.">
                                                <TextBlock Text="백업 경로:"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"
                                                           ToolTip="INI 백업 파일을 저장할 폴더 경로입니다."/>
                                                <TextBox Text="{Binding BackupDirectory, UpdateSourceTrigger=PropertyChanged}"
                                                         Width="350"
                                                         IsReadOnly="True"
                                                         DockPanel.Dock="Left"
                                                         Margin="0,12,8,12"
                                                         FontSize="14"
                                                         ToolTip="선택된 백업 폴더의 전체 경로가 표시됩니다. (읽기 전용)"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="INI 백업"
                                                            Width="80"
                                                            Height="28"
                                                            FontSize="12"
                                                            Margin="8,0,0,0"
                                                            Command="{Binding BackupCommand}"
                                                            ToolTip="현재 INI 파일을 백업 경로에 복사하여 백업 파일을 생성합니다." />
                                                    <Button Content="백업 폴더 열기"
                                                            Width="80"
                                                            Height="28"
                                                            FontSize="10"
                                                            Margin="8,0,0,0"
                                                            Command="{Binding OpenBackupFolderCommand}"
                                                            ToolTip="탐색기로 백업 폴더를 엽니다." />
                                                </StackPanel>
                                            </DockPanel>
                                        </Grid>
                                    </GroupBox>

                                    <!-- AXIS -->
                                    <GroupBox Header="AXIS 설정"
                                              Grid.Column="1"
                                              Margin="8,0,0,0"
                                              ToolTip="현재 장비의 AXIS 개수와 작업 대상 AXIS를 선택하는 영역입니다.">
                                        <Grid Margin="8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="AXIS 개수:"
                                                       Grid.Row="0"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       ToolTip="ServoParameter.ini 기준 전체 AXIS 개수를 입력합니다."/>
                                            <TextBox Text="{Binding AxisCount, UpdateSourceTrigger=LostFocus}"
                                                     Grid.Row="0"
                                                     Grid.Column="1"
                                                     Width="120"
                                                     ToolTip="전체 AXIS 수를 숫자로 입력한 후 포커스를 이동하면 갱신됩니다." />

                                            <TextBlock Text="AXIS 선택:"
                                                       Grid.Row="1"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Margin="0,6,0,0"
                                                       ToolTip="현재 편집·계산할 대상 AXIS를 선택합니다."/>
                                            <ComboBox ItemsSource="{Binding AxisList}"
                                                      SelectedItem="{Binding SelectedAxis}"
                                                      Grid.Row="1"
                                                      Grid.Column="1"
                                                      Width="160"
                                                      Margin="0,6,0,0"
                                                      FontSize="13"
                                                      ToolTip="AXIS 리스트에서 작업할 AXIS 번호를 선택합니다."/>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </Border>


                            <!-- 선택된 탭의 컨텐츠(파랑 체크 자리) -->
                            <ContentPresenter Grid.Row="2"
                                              ContentSource="SelectedContent"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              Margin="{TemplateBinding Padding}"
                                              ToolTip="선택한 탭의 상세 화면입니다."/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 탭 스타일 커스터마이즈 -->
        <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="20,8"/>
            <!-- 내부 여백 -->
            <Setter Property="MinHeight" Value="36"/>
            <!-- 최소 높이 지정 -->
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="Foreground" Value="#1565C0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <!-- 헤더 텍스트를 그대로 툴팁으로 사용 -->
            <Setter Property="ToolTip" Value="{Binding Header, RelativeSource={RelativeSource Self}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="#90CAF9"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True"
                                Margin="2,0"
                                MinHeight="{TemplateBinding MinHeight}">
                            <ContentPresenter x:Name="Content"
                                              ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- 선택된 탭 -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#64B5F6"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1E88E5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <!-- 마우스 오버 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#BBDEFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F4F6F9"
          ToolTip="ServoParameter 관련 설정(리미트 계산, 원점 좌표계 등)을 한 곳에서 관리하는 Parameter 페이지입니다.">
        <avalonDock:DockingManager x:Name="DockManager"
                                   ToolTip="Parameter 전용 레이아웃 영역입니다.">
            <avalonDock:LayoutRoot>
                <avalonDock:LayoutPanel Orientation="Horizontal">

                    <avalonDock:LayoutPanel Orientation="Vertical" DockWidth="*">
                        <avalonDock:LayoutAnchorablePane DockHeight="*">
                            <avalonDock:LayoutAnchorable Title="Parameter"
                                                         ContentId="ParameterView"
                                                         CanHide="False"
                                                         CanClose="False"
                                                         ToolTip="ServoParameter INI와 AXIS를 기반으로 각종 파라미터를 편집하는 화면입니다.">

                                <!-- 탭 컨트롤: 기존 탭 유지, 각 탭의 DataContext를 부모 VM의 자식 VM에 바인딩 -->
                                <Controls:MetroTabControl x:Name="ParameterTabControl"
                                                          Margin="10"
                                                          FontSize="16"
                                                          TabStripPlacement="Top"
                                                          HorizontalContentAlignment="Stretch"
                                                          VerticalContentAlignment="Stretch"
                                                          ToolTip="리미트 계산기, 원점 좌표계 등 기능별 탭을 전환합니다.">

                                    <!-- 리미트 계산기 -->
                                    <TabItem Header="리미트 계산기"
                                             ToolTip="SoftLimit(Pr.228, 229, 22A, 22B) 계산 및 적용 도구입니다.">
                                        <Border Background="White"
                                                CornerRadius="10"
                                                Padding="15"
                                                Margin="5"
                                                DataContext="{Binding LimitVM}"
                                                ToolTip="선택된 AXIS의 SoftLimit 값을 읽고, 새로운 값으로 계산·적용할 수 있습니다.">
                                            <ConLayOut:LimitCalculatorControl/>
                                        </Border>
                                    </TabItem>

                                    <!-- 원점 좌표계 -->
                                    <TabItem Header="원점 좌표계"
                                             ToolTip="ORIGIN AXIS(Pr.246, 247) 값 확인 및 변경 도구입니다.">
                                        <Border Background="White"
                                                CornerRadius="10"
                                                Padding="15"
                                                Margin="5"
                                                DataContext="{Binding OriginVM}"
                                                ToolTip="선택된 AXIS의 ORIGIN AXIS 값을 확인하고 변경할 수 있습니다.">
                                            <ConLayOut:OriginAxisControl/>
                                        </Border>
                                    </TabItem>

                                    <!-- 기타 기능 -->
                                    <TabItem Header="기타 기능"
                                             ToolTip="향후 추가 예정인 Parameter 관련 기능 영역입니다.">
                                        <Border Background="White"
                                                CornerRadius="10"
                                                Padding="15"
                                                Margin="5"
                                                ToolTip="추가 기능이 구현되면 이 영역에 표시될 예정입니다.">
                                            <TextBlock Text="추후 업데이트 예정"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontSize="18"
                                                       Foreground="Gray"
                                                       ToolTip="현재는 준비 중인 기능입니다."/>
                                        </Border>
                                    </TabItem>
                                </Controls:MetroTabControl>
                                <!-- 끝 -->

                            </avalonDock:LayoutAnchorable>
                        </avalonDock:LayoutAnchorablePane>
                    </avalonDock:LayoutPanel>

                </avalonDock:LayoutPanel>
            </avalonDock:LayoutRoot>
        </avalonDock:DockingManager>
    </Grid>
</UserControl>
