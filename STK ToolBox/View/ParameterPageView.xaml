<UserControl x:Class="STK_ToolBox.View.ParameterPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock"
             xmlns:ConLayOut="clr-namespace:STK_ToolBox.View"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:vm="clr-namespace:STK_ToolBox.ViewModels"
             mc:Ignorable="d">

    <UserControl.Resources>

        <!-- MetroTabControl 템플릿: 탭헤더 아래에 고정영역 끼워넣기 -->
        <Style TargetType="Controls:MetroTabControl" BasedOn="{StaticResource {x:Type Controls:MetroTabControl}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- 탭 헤더 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 고정 영역 -->
                                <RowDefinition Height="*"/>
                                <!-- 탭 컨텐츠 -->
                            </Grid.RowDefinitions>

                            <!-- 헤더 -->
                            <UniformGrid Grid.Row="0" IsItemsHost="True" Rows="1" HorizontalAlignment="Stretch"/>

                            <!-- 고정 영역(빨간 체크 자리) -->
                            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="10" Margin="10,8,10,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- INI / 백업 -->
                                    <GroupBox Header="INI 파일" Margin="0,0,8,0">
                                        <Grid Margin="8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- ① INI 경로 + 찾아보기 -->
                                            <DockPanel LastChildFill="True" Grid.Row="0" Margin="0,0,0,6">
                                                <TextBlock Text="INI 경로:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBox Text="{Binding IniPath, UpdateSourceTrigger=PropertyChanged}"
                                                         Width="350" IsReadOnly="True" DockPanel.Dock="Left"
                                                         Margin="10,12,8,12" FontSize="14"/>
                                                <Button Content="찾아보기" Width="80" Height="28" FontSize="12" Margin="0,0,25,0"
                                                        Command="{Binding BrowseCommand}"
                                                        ToolTip="INI 파일 경로를 찾아서 선택하세요."/>
                                            </DockPanel>

                                            <!-- ② 백업 폴더 경로 + 찾아보기 + 동작 버튼 -->
                                            <DockPanel LastChildFill="True" Grid.Row="1">
                                                <TextBlock Text="백업 경로:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBox Text="{Binding BackupDirectory, UpdateSourceTrigger=PropertyChanged}"
                                                         Width="350" IsReadOnly="True" DockPanel.Dock="Left"
                                                         Margin="0,12,8,12" FontSize="14"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="INI 백업" Width="80" Height="28" FontSize="12" Margin="8,0,0,0"
                                                            Command="{Binding BackupCommand}" />
                                                    <Button Content="백업 폴더 열기" Width="80" Height="28" FontSize="10" Margin="8,0,0,0"
                                                            Command="{Binding OpenBackupFolderCommand}" />
                                                </StackPanel>
                                            </DockPanel>
                                        </Grid>
                                    </GroupBox>

                                    <!-- AXIS -->
                                    <GroupBox Header="AXIS 설정" Grid.Column="1" Margin="8,0,0,0">
                                        <Grid Margin="8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="AXIS 개수:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                                            <TextBox Text="{Binding AxisCount, UpdateSourceTrigger=LostFocus}" Grid.Row="0" Grid.Column="1" Width="120"/>

                                            <TextBlock Text="AXIS 선택:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0"/>
                                            <ComboBox ItemsSource="{Binding AxisList}"
                                                      SelectedItem="{Binding SelectedAxis}"
                                                      Grid.Row="1" Grid.Column="1" Width="160" Margin="0,6,0,0" FontSize="13"/>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </Border>


                            <!-- 선택된 탭의 컨텐츠(파랑 체크 자리) -->
                            <ContentPresenter Grid.Row="2"
                                              ContentSource="SelectedContent"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 탭 스타일 커스터마이즈 -->
        <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="20,8"/>
            <!-- 내부 여백 -->
            <Setter Property="MinHeight" Value="36"/>
            <!-- 최소 높이 지정 -->
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="Foreground" Value="#1565C0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd"
                 Background="{TemplateBinding Background}"
                 CornerRadius="6"
                 BorderBrush="#90CAF9"
                 BorderThickness="1"
                 Padding="{TemplateBinding Padding}"
                 SnapsToDevicePixels="True"
                 Margin="2,0"
                 MinHeight="{TemplateBinding MinHeight}">
                            <ContentPresenter x:Name="Content"
                               ContentSource="Header"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- 선택된 탭 -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#64B5F6"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1E88E5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <!-- 마우스 오버 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#BBDEFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F4F6F9">
        <avalonDock:DockingManager x:Name="DockManager">
            <avalonDock:LayoutRoot>
                <avalonDock:LayoutPanel Orientation="Horizontal">

                    <avalonDock:LayoutPanel Orientation="Vertical" DockWidth="*">
                        <avalonDock:LayoutAnchorablePane DockHeight="*">
                            <avalonDock:LayoutAnchorable Title="Parameter"
                                                         ContentId="ParameterView"
                                                         CanHide="False"
                                                         CanClose="False">

                                <!-- 탭 컨트롤: 기존 탭 유지, 각 탭의 DataContext를 부모 VM의 자식 VM에 바인딩 -->
                                <Controls:MetroTabControl x:Name="ParameterTabControl"
                                                          Margin="10"
                                                          FontSize="16"
                                                          TabStripPlacement="Top"
                                                          HorizontalContentAlignment="Stretch"
                                                          VerticalContentAlignment="Stretch">

                                    <!-- 리미트 계산기 -->
                                    <TabItem Header="리미트 계산기">
                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="5"
                                                DataContext="{Binding LimitVM}">
                                            <ConLayOut:LimitCalculatorControl/>
                                        </Border>
                                    </TabItem>

                                    <!-- 원점 좌표계 -->
                                    <TabItem Header="원점 좌표계">
                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="5"
                                                DataContext="{Binding OriginVM}">
                                            <ConLayOut:OriginAxisControl/>
                                        </Border>
                                    </TabItem>

                                    <!-- 기타 기능 -->
                                    <TabItem Header="기타 기능">
                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="5">
                                            <TextBlock Text="추후 업데이트 예정"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontSize="18"
                                                       Foreground="Gray"/>
                                        </Border>
                                    </TabItem>
                                </Controls:MetroTabControl>
                                <!-- 끝 -->

                            </avalonDock:LayoutAnchorable>
                        </avalonDock:LayoutAnchorablePane>
                    </avalonDock:LayoutPanel>

                </avalonDock:LayoutPanel>
            </avalonDock:LayoutRoot>
        </avalonDock:DockingManager>
    </Grid>
</UserControl>
