<UserControl x:Class="STK_ToolBox.View.InverterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:STK_ToolBox.ViewModels"
             mc:Ignorable="d">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryDark" Color="#1E40AF"/>
        <SolidColorBrush x:Key="BorderBrushSoft" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6B7280"/>
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFF"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <Style x:Key="BaseButton" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="MinWidth" Value="112"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="PrimaryButton" BasedOn="{StaticResource BaseButton}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryDark}"/>
        </Style>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:InverterDriveMxViewModel/>
    </UserControl.DataContext>

    <Grid Background="#F4F5F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <DockPanel Grid.Row="0" Margin="16,16,16,8">
            <TextBlock Text="Inverter (CC-Link)" FontSize="18" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <!-- <Button Style="{StaticResource BaseButton}" Content="보드 검색" Command="{Binding DetectBoardsCommand}" ToolTip="PC에 꽂힌 CC-Link 보드를 자동 감지합니다."/> -->
                <Button Style="{StaticResource BaseButton}" Content="도움말" Command="{Binding ShowHelpCommand}"/>
            </StackPanel>
        </DockPanel>

        <!-- 연결/파라미터 -->
        <Border Grid.Row="1" Margin="16,0,16,12" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- 연결 -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Logical Station" Foreground="{StaticResource TextMuted}"/>
                    <TextBox Width="60" Text="{Binding LogicalStation, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Style="{StaticResource PrimaryButton}" Content="Connect" Command="{Binding ConnectCommand}"/>
                    <Button Style="{StaticResource BaseButton}" Content="Disconnect" Command="{Binding DisconnectCommand}"/>
                </StackPanel>

                <!-- 파라미터 -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="RunCmd(RWr)"/>
                    <TextBox Width="90" Text="{Binding RunCmdDevice}"/>
                    <TextBlock Text="FreqCmd(RWr)" Margin="6,0,0,0"/>
                    <TextBox Width="90" Text="{Binding FreqCmdDevice}"/>
                    <TextBlock Text="Stat(RWw)" Margin="6,0,0,0"/>
                    <TextBox Width="90" Text="{Binding StatDevice}"/>
                    <TextBlock Text="FreqMon(RWw)" Margin="6,0,0,0"/>
                    <TextBox Width="90" Text="{Binding FreqMonDevice}"/>
                    <TextBlock Text="Hz Unit" Margin="6,0,0,0"/>
                    <TextBox Width="70" Text="{Binding HzUnitDivisor}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 제어 -->
        <Border Grid.Row="2" Margin="16,0,16,12" Style="{StaticResource CardBorder}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Set Freq(Hz)" VerticalAlignment="Center" Foreground="{StaticResource TextMuted}"/>
                <TextBox Width="90" Text="{Binding SetFreqHz, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Style="{StaticResource BaseButton}" Content="Set Freq" Command="{Binding SetFreqCommand}"/>
                <Separator Width="1" Margin="8,0" Background="{StaticResource BorderBrushSoft}"/>
                <Button Style="{StaticResource PrimaryButton}" Content="Run FWD" Command="{Binding RunFwdCommand}"/>
                <Button Style="{StaticResource BaseButton}" Content="Run REV" Command="{Binding RunRevCommand}"/>
                <Button Style="{StaticResource BaseButton}" Content="Stop" Command="{Binding StopCommand}"/>
                <Button Style="{StaticResource BaseButton}" Content="Reset" Command="{Binding ResetCommand}"/>
                <Button Style="{StaticResource BaseButton}" Content="Refresh" Command="{Binding RefreshCommand}"/>
                <Separator Width="1" Margin="8,0" Background="{StaticResource BorderBrushSoft}"/>
                <TextBlock Text="Current:" VerticalAlignment="Center" Foreground="{StaticResource TextMuted}"/>
                <TextBlock Text="{Binding CurFreqHz, StringFormat={}{0:F2} Hz}" Margin="6,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding StatusWord, StringFormat=  (0x{0:X4})}" Margin="6,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 상태바 -->
        <Border Grid.Row="3" Background="#EEF2F7" Padding="10,8" BorderBrush="{StaticResource BorderBrushSoft}" BorderThickness="1,0,0,0">
            <DockPanel>
                <TextBlock Text="{Binding StatusText}" Foreground="#374151"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
