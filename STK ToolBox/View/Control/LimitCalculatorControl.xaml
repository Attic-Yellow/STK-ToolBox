<UserControl x:Class="STK_ToolBox.View.LimitCalculatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <!-- 읽기 전용 텍스트박스 공통 스타일 -->
    <UserControl.Resources>
        <Style x:Key="ReadOnlyBox" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <!-- 원하는 룩 유지 -->
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F4F4F8">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" HorizontalAlignment="Center" MaxWidth="600" VerticalAlignment="Top">

                <!-- 현재 SoftLimit 값 (진짜 읽기 전용) -->
                <GroupBox Header="현재 SOFTLIMIT 값 (읽기 전용)" Margin="0,0,0,10" FontSize="16" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <!-- Plus -->
                        <Label Content="Plus (Pr.228 + 229)" FontSize="14" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"
                               ToolTip="INI에서 읽어온 플러스 리미트 값입니다."/>
                        <StackPanel Grid.ColumnSpan="4" Orientation="Horizontal" VerticalAlignment="Center" Margin="150,0,-25,0">
                            <StackPanel Margin="10,0,10,0" MinWidth="90">
                                <TextBlock Text="10진수" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Style="{StaticResource ReadOnlyBox}"
                                         Text="{Binding CurrentSoftLimitPlusDecimal, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,10,0" MinWidth="85">
                                <TextBlock Text="상위 HEX (229)" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Style="{StaticResource ReadOnlyBox}"
                                         Text="{Binding CurrentSoftLimitPlusHighHex, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,10,0" MinWidth="85">
                                <TextBlock Text="하위 HEX (228)" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Style="{StaticResource ReadOnlyBox}"
                                         Text="{Binding CurrentSoftLimitPlusLowHex, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Minus -->
                        <Label Content="Minus (Pr.22A + 22B)" FontSize="14" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"
                               ToolTip="INI에서 읽어온 마이너스 리미트 값입니다."/>
                        <StackPanel Grid.Row="1" Grid.ColumnSpan="4" Orientation="Horizontal" VerticalAlignment="Center" Margin="150,0,-25,0">
                            <StackPanel Margin="10,0,10,0" MinWidth="90">
                                <TextBlock Text="10진수" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Style="{StaticResource ReadOnlyBox}"
                                         Text="{Binding CurrentSoftLimitMinusDecimal, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,10,0" MinWidth="85">
                                <TextBlock Text="상위 HEX (22B)" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Style="{StaticResource ReadOnlyBox}"
                                         Text="{Binding CurrentSoftLimitMinusHighHex, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,10,0" MinWidth="85">
                                <TextBlock Text="하위 HEX (22A)" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Style="{StaticResource ReadOnlyBox}"
                                         Text="{Binding CurrentSoftLimitMinusLowHex, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- 입력/적용 그룹 (사용자가 여기에 입력) -->
                <GroupBox Header="SOFTLIMIT 값 입력 및 적용" Margin="0,0,0,20" FontSize="16" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Max Value" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                        <TextBox Text="{Binding SoftLimitPlus, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Height="32" FontSize="14"/>

                        <Label Content="상한치" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" FontSize="14"/>
                        <TextBox Text="{Binding SoftLimitPlusDelta, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="3" Height="32" FontSize="14"/>

                        <Label Content="Min Value" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                        <TextBox Text="{Binding SoftLimitMinus, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Height="32" FontSize="14"/>

                        <Label Content="하한치" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" FontSize="14"/>
                        <TextBox Text="{Binding SoftLimitMinusDelta, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="3" Height="32" FontSize="14"/>
                    </Grid>
                </GroupBox>

                <!-- 버튼 영역 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="적용" Width="140" Height="40" FontSize="15" Command="{Binding ApplyCommand}"/>
                    <Button Content="초기화" Width="160" Height="40" FontSize="15"
                            Margin="10,0,10,0" Background="#FF8A65" Foreground="White"
                            Command="{Binding ZeroParamsCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
