<UserControl x:Class="STK_ToolBox.View.LimitCalculatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:STK_ToolBox.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Background="#F4F4F8">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" HorizontalAlignment="Center" MaxWidth="600" VerticalAlignment="Top">

                <!-- INI 파일 -->
                <GroupBox Header="INI 파일 선택" Margin="0,0,0,15" FontSize="16" Padding="10">
                    <DockPanel LastChildFill="True">
                        <Label Content="INI 파일:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
                        <TextBox Text="{Binding IniPath}" IsReadOnly="True" FontSize="14" Height="32" Width="350"
                                 VerticalAlignment="Center" DockPanel.Dock="Left" Margin="0,0,10,0"
                                 ToolTip="INI 파일 경로입니다. 브라우저를 통해 선택할 수 있습니다."/>
                        <Button Content="찾아보기" Width="100" Height="32" FontSize="14"
                                Command="{Binding BrowseCommand}" ToolTip="INI 파일 경로를 찾아서 선택하세요." />
                    </DockPanel>
                </GroupBox>

                <!-- Axis 설정 -->
                <GroupBox Header="AXIS 설정" Margin="0,0,0,15" FontSize="16" Padding="10">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="AXIS 개수:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="14"
                               ToolTip="사용되는 Axis 개수를 입력해주세요. (기본 값은 4개 입니다.)"/>
                        <TextBox Text="{Binding AxisCount, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1"
                                 Width="120" Height="32" FontSize="14"
                                 ToolTip="사용되는 Axis 개수를 입력해주세요. (기본 값은 4개 입니다.)"/>

                        <Label Content="AXIS 선택:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="14"
                               ToolTip="수정 및 확인 할 Axis를 선택해 주세요."/>
                        <ComboBox ItemsSource="{Binding AxisList}" SelectedItem="{Binding SelectedAxis}"
                                  Grid.Row="1" Grid.Column="1" Width="200" Height="32" FontSize="14"
                                  ToolTip="수정 및 확인 할 Axis를 선택해 주세요."/>
                    </Grid>
                </GroupBox>

                <!-- 현재 SoftLimit 값 -->
                <GroupBox Header="현재 SOFTLIMIT 값 (읽기 전용)" Margin="0,0,0,10" FontSize="16" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <!-- Plus -->
                        <Label Content="Plus (Pr.228 + 229)" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"
                               ToolTip="현재 플러스 리미트 값입니다."/>
                        <StackPanel Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,-55,0">
                            <StackPanel Margin="10,0,10,0" MinWidth="100">
                                <TextBlock Text="10진수" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Text="{Binding CurrentSoftLimitPlusDecimal, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,10,0" MinWidth="100">
                                <TextBlock Text="상위 HEX (229)" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Text="{Binding CurrentSoftLimitPlusHighHex, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,10,0" MinWidth="100">
                                <TextBlock Text="하위 HEX (228)" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Text="{Binding CurrentSoftLimitPlusLowHex, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Minus -->
                        <Label Content="Minus (Pr.22A + 22B)" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"
                               ToolTip="현재 마이너스 리미트 값입니다."/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,-55,0">
                            <StackPanel Margin="10,0,10,0" MinWidth="100">
                                <TextBlock Text="10진수" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Text="{Binding CurrentSoftLimitMinusDecimal, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,10,0" MinWidth="100">
                                <TextBlock Text="상위 HEX (22B)" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Text="{Binding CurrentSoftLimitMinusHighHex, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,10,0" MinWidth="100">
                                <TextBlock Text="하위 HEX (22A)" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBox Text="{Binding CurrentSoftLimitMinusLowHex, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- 입력/적용 그룹 -->
                <GroupBox Header="SOFTLIMIT 값 입력 및 적용" Margin="0,0,0,20" FontSize="16" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Max Value" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="14"
                               ToolTip="최대값을 입력해주세요"/>
                        <TextBox Text="{Binding SoftLimitPlus}" Grid.Row="0" Grid.Column="1" Height="32" FontSize="14"
                                 ToolTip="최대값을 입력해주세요"/>
                        <Label Content="상한치" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" FontSize="14"
                               ToolTip="상한치를 입력해주세요"/>
                        <TextBox Text="{Binding SoftLimitPlusDelta}" Grid.Row="0" Grid.Column="3" Height="32" FontSize="14"
                                 ToolTip="상한치를 입력해주세요"/>

                        <Label Content="Min Value" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="14"
                               ToolTip="최소값을 입력해주세요"/>
                        <TextBox Text="{Binding SoftLimitMinus}" Grid.Row="1" Grid.Column="1" Height="32" FontSize="14"
                                 ToolTip="최소값을 입력해주세요"/>
                        <Label Content="하한치" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" FontSize="14"
                               ToolTip="하한치를 입력해주세요"/>
                        <TextBox Text="{Binding SoftLimitMinusDelta}" Grid.Row="1" Grid.Column="3" Height="32" FontSize="14"
                                 ToolTip="하한치를 입력해주세요"/>
                    </Grid>
                </GroupBox>

                <!-- 버튼 영역 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="적용" Width="140" Height="40" FontSize="15" Command="{Binding ApplyCommand}"/>
                    <Button Content="초기화" Width="160" Height="40" FontSize="15"
                            Margin="10,0,10,0" Background="#FF8A65" Foreground="White"
                            Command="{Binding ZeroParamsCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>