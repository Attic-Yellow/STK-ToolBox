<UserControl x:Class="STK_ToolBox.View.IOByteSheetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =====================  Resources  ===================== -->
    <UserControl.Resources>

        <!-- 색 팔레트 -->
        <SolidColorBrush x:Key="AccentBrush"           Color="#2F80ED"/>
        <SolidColorBrush x:Key="CardBorderBrush"       Color="#D6DEEB"/>
        <SolidColorBrush x:Key="CardBackgroundBrush"   Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardHeaderBrush"       Color="#F7F9FC"/>
        <SolidColorBrush x:Key="TitleBrush"            Color="#102A43"/>
        <SolidColorBrush x:Key="SubTextBrush"          Color="#627D98"/>

        <!-- 기본 TextBox : 흰 배경 + 진한 글자 -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="#222222"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 카드 컨테이너 -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- 섹션 제목 -->
        <Style x:Key="SectionTitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- 설명 텍스트 -->
        <Style x:Key="CaptionText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource SubTextBrush}"/>
        </Style>

        <!-- 필드 라벨 -->
        <Style x:Key="FieldLabelText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource SubTextBrush}"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- 숫자 / 짧은 입력용 TextBox -->
        <Style x:Key="FieldTextBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Padding" Value="3,2"/>
        </Style>

        <!-- 납작한 기본 버튼 -->
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Height" Value="26"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Foreground" Value="#203040"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#C3CEDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F4FF"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 경로 표시 텍스트 -->
        <Style x:Key="PathText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#222222"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- 강조 버튼 -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2F7AD1"/>
                    <Setter Property="BorderBrush" Value="#2F7AD1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid 행 : X / Y 색상 구분 -->
        <Style x:Key="SegmentRowStyle" TargetType="DataGridRow">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Device}" Value="X">
                    <Setter Property="Background" Value="#F7FAFF"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Device}" Value="Y">
                    <Setter Property="Background" Value="#FFF7F0"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D6E4FF"/>
                    <Setter Property="Foreground" Value="#102A43"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Segments 전체에서 X 만 필터 -->
        <CollectionViewSource x:Key="SegmentsXView"
                              Source="{Binding Segments}"
                              Filter="SegmentsXView_Filter" />

        <!-- Segments 전체에서 Y 만 필터 -->
        <CollectionViewSource x:Key="SegmentsYView"
                              Source="{Binding Segments}"
                              Filter="SegmentsYView_Filter" />

    </UserControl.Resources>

    <!-- =====================  Layout  ===================== -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- 인버터 + DB 상태 -->
            <RowDefinition Height="Auto"/>
            <!-- 엑셀 / 설정 -->
            <RowDefinition Height="Auto"/>
            <!-- 세그먼트 리스트 -->
            <RowDefinition Height="*"/>
            <!-- 하단 상태 -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 1. 인버터 설정 + DB 상태 -->
        <Border Grid.Row="0"
                Padding="10"
                Margin="0,0,0,8"
                CornerRadius="6"
                Background="{StaticResource CardBackgroundBrush}"
                BorderBrush="{StaticResource CardBorderBrush}"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- 인버터 설정 -->
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="인버터 설정" Style="{StaticResource SectionTitleText}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <CheckBox Content="인버터 설정 사용"
                                  IsChecked="{Binding UseInverterConfig, UpdateSourceTrigger=PropertyChanged}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        <TextBlock Text="체크 시 X / Y 모두 인버터 구간을 추가합니다."
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource SubTextBrush}"
                                   FontSize="11"/>
                    </StackPanel>

                    <UniformGrid Columns="4" Margin="0,0,0,2">
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,4">
                            <TextBlock Text="Channel" Style="{StaticResource FieldLabelText}"/>
                            <TextBox Text="{Binding InverterChannel, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldTextBox}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,20,4">
                            <TextBlock Text="Station 수" Style="{StaticResource FieldLabelText}"/>
                            <TextBox Text="{Binding StationCount, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldTextBox}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,20,4">
                            <TextBlock Text="Byte/Station" Style="{StaticResource FieldLabelText}"/>
                            <TextBox Text="{Binding BytesPerStation, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldTextBox}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,20,4">
                            <TextBlock Text="시작 Addr (HEX)" Style="{StaticResource FieldLabelText}"/>
                            <TextBox Text="{Binding StartAddressHex, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldTextBox}"/>
                        </StackPanel>
                    </UniformGrid>
                </StackPanel>

                <!-- DB 상태 -->
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="20,0,0,0">
                    <TextBlock Text="DB 상태" Style="{StaticResource SectionTitleText}"/>

                    <TextBlock Text="{Binding DbStatusMessage}"
                               Foreground="{StaticResource SubTextBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,6"
                               FontSize="11"/>

                    <Button Content="IOMonitoring 다시 읽기"
                            Command="{Binding RefreshFromDbCommand}"
                            Style="{StaticResource FlatButton}"
                            Width="170"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 2. 엑셀 출력 설정 + 설정 저장/불러오기 -->
        <Border Grid.Row="1"
                Padding="10"
                Margin="0,0,0,8"
                CornerRadius="6"
                Background="White"
                BorderBrush="{StaticResource CardBorderBrush}"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- 경로 / 파일명 -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
                    <TextBlock Text="엑셀 출력 설정" Style="{StaticResource SectionTitleText}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="폴더" Style="{StaticResource FieldLabelText}"/>
                        <TextBlock Text="{Binding OutputFolder}"
                                   Style="{StaticResource PathText}"
                                   Margin="0,0,8,0"
                                   Width="260"/>
                        <Button Content="찾기"
                                Command="{Binding BrowseFolderCommand}"
                                Style="{StaticResource FlatButton}"
                                Width="70"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="파일명" Style="{StaticResource FieldLabelText}"/>
                        <TextBox Text="{Binding OutputFileName}"
                                 VerticalAlignment="Center"
                                 Width="180"
                                 Margin="0,0,4,0"/>
                        <TextBlock Text=".xlsx"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource SubTextBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- 설정 저장/불러오기 + Export + 도움말 -->
                <StackPanel Grid.Column="1" Orientation="Vertical"
                            HorizontalAlignment="Right">
                    <TextBlock Text="설정 / 내보내기" Style="{StaticResource SectionTitleText}"
                               HorizontalAlignment="Right"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,0,4">
                        <Button Content="설정 불러오기"
                                Command="{Binding LoadSettingsCommand}"
                                Style="{StaticResource FlatButton}"
                                Width="100"/>
                        <Button Content="설정 저장"
                                Command="{Binding SaveSettingsCommand}"
                                Style="{StaticResource FlatButton}"
                                Width="90"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,0,4">
                        <Button Content="IO Byte Sheet 엑셀 생성"
                                Command="{Binding ExportCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Width="200"
                                HorizontalAlignment="Right"/>
                        <Button Content="도움말"
                                Command="{Binding HelpCommand}"
                                Style="{StaticResource FlatButton}"
                                Width="70"
                                HorizontalAlignment="Right"/>
                    </StackPanel>

                    <TextBlock Text="{Binding ExportStatusMessage}"
                               Foreground="{StaticResource SubTextBrush}"
                               FontSize="11"
                               Margin="0,4,0,0"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Right"
                               Width="220"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 3. IO Byte 세그먼트 (X / Y 각각 탭 + 스크롤) -->
        <Border Grid.Row="2" Style="{StaticResource CardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="IOMonitoring 기반 IO Byte 세그먼트 (X / Y 구분)"
                           Style="{StaticResource SectionTitleText}"/>

                <TabControl Grid.Row="1" Margin="0,2,0,0">
                    <!-- X 탭 -->
                    <TabItem Header="X 세그먼트">
                        <DataGrid ItemsSource="{Binding Source={StaticResource SegmentsXView}}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  RowStyle="{StaticResource SegmentRowStyle}"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource CardHeaderBrush}"/>
                                    <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="BorderBrush" Value="#D0D7E2"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="Padding" Value="4,2"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Chan" Width="60"
                                                    Binding="{Binding Channel}"/>
                                <DataGridTextColumn Header="Dev" Width="50"
                                                    Binding="{Binding Device}"/>
                                <DataGridTextColumn Header="StartAddr (HEX)" Width="120"
                                                    Binding="{Binding StartAddressHex}"/>
                                <DataGridTextColumn Header="Bytes" Width="70"
                                                    Binding="{Binding ByteSize}"/>
                                <DataGridTextColumn Header="Source" Width="*"
                                                    Binding="{Binding Source}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <!-- Y 탭 -->
                    <TabItem Header="Y 세그먼트">
                        <DataGrid ItemsSource="{Binding Source={StaticResource SegmentsYView}}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  RowStyle="{StaticResource SegmentRowStyle}"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource CardHeaderBrush}"/>
                                    <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="BorderBrush" Value="#D0D7E2"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="Padding" Value="4,2"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Chan" Width="60"
                                                    Binding="{Binding Channel}"/>
                                <DataGridTextColumn Header="Dev" Width="50"
                                                    Binding="{Binding Device}"/>
                                <DataGridTextColumn Header="StartAddr (HEX)" Width="120"
                                                    Binding="{Binding StartAddressHex}"/>
                                <DataGridTextColumn Header="Bytes" Width="70"
                                                    Binding="{Binding ByteSize}"/>
                                <DataGridTextColumn Header="Source" Width="*"
                                                    Binding="{Binding Source}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>

        <!-- 4. 하단 상태 메시지 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="2,2,0,0">
            <TextBlock Text="{Binding SettingsStatusMessage}"
                       Style="{StaticResource CaptionText}"
                       Margin="0,0,12,0"/>
            <TextBlock Text="{Binding ExportStatusMessage}"
                       Style="{StaticResource CaptionText}"/>
        </StackPanel>

    </Grid>
</UserControl>
