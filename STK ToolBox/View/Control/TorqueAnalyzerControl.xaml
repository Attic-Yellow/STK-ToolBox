<UserControl x:Class="STK_ToolBox.View.TorqueAnalyzerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단 영역: 저장 폴더 + 버튼들 -->
        <StackPanel Grid.Row="0"
                    Orientation="Vertical"
                    Margin="0,0,0,10">

            <!-- 저장 폴더 선택 라인 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                <TextBlock Text="저장 폴더:"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           ToolTip="Torque 분석 결과와 병합 로그 파일을 저장할 폴더 경로를 설정합니다."/>
                <TextBox Width="320"
                         VerticalAlignment="Center"
                         Text="{Binding OutputDirectory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="선택된 결과 저장 폴더 경로입니다. 직접 입력하거나 [폴더 선택...] 버튼으로 지정할 수 있습니다."/>
                <Button Content="폴더 선택..."
                        Margin="8,0,0,0"
                        Width="100"
                        Height="28"
                        Command="{Binding BrowseOutputDirCommand}"
                        ToolTip="Torque 요약 파일과 병합된 로그 파일을 저장할 폴더를 탐색기에서 선택합니다."/>
            </StackPanel>

            <!-- 기존 버튼들 -->
            <StackPanel Orientation="Horizontal">
                <Button Content="📂 로그 파일 선택"
                        Width="170" Height="38" Margin="0,0,10,0"
                        Command="{Binding SelectLogCommand}"
                        ToolTip="분석할 Torque 로그 파일을 선택합니다." />

                <Button Content="🔍 분석 및 미리보기"
                        Width="170" Height="38" Margin="0,0,10,0"
                        Command="{Binding AnalyzeCommand}"
                        ToolTip="선택한 로그 파일을 기준으로 Torque를 분석하고, 아래 미리보기 영역에 결과를 표시합니다." />

                <Button Content="🧩 다중 로그 병합"
                        Width="170" Height="38"
                        Command="{Binding MergeLogsCommand}"
                        ToolTip="여러 개의 Torque 로그 파일을 선택하여 하나의 병합 로그와 요약 파일을 생성합니다." />
            </StackPanel>
        </StackPanel>

        <!-- 미리보기 영역 -->
        <TextBox Grid.Row="1"
                 FontFamily="Consolas"
                 FontSize="14"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 Text="{Binding PreviewText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 ToolTip="Torque 로그 분석 결과와 요약 내용이 표시되는 영역입니다. 읽기 전용입니다." />

        <!-- 상태 표시줄 -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"
                           ToolTip="현재 작업 상태, 완료 여부 또는 오류 메시지가 표시됩니다." />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
