<UserControl x:Class="STK_ToolBox.View.OriginAxisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ReadOnlyBox" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F4F4F8">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" HorizontalAlignment="Center" MaxWidth="600" VerticalAlignment="Top">

                <!-- 현재 Origin Axis 값 (진짜 읽기 전용) -->
                <GroupBox Header="현재 원점좌표계 값 (읽기 전용)" Margin="0,0,0,10" FontSize="16" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="원점좌표계" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"
                               ToolTip="INI에서 읽어온 ORIGIN AXIS 값입니다. 246=하위, 247=상위"/>
                        <StackPanel Grid.ColumnSpan="4" Orientation="Horizontal" VerticalAlignment="Center" Margin="152,0,-28,0">
                            <StackPanel Margin="10,0,10,0" MinWidth="90">
                                <TextBlock Text="10진수" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBox Style="{StaticResource ReadOnlyBox}"
                                         Text="{Binding CurrentOriginAxisDecimal, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,10,0" MinWidth="85">
                                <TextBlock Text="상위 HEX (247)" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBox Style="{StaticResource ReadOnlyBox}"
                                         Text="{Binding CurrentOriginAxisHighHex, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,10,0" MinWidth="85">
                                <TextBlock Text="하위 HEX (246)" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBox Style="{StaticResource ReadOnlyBox}"
                                         Text="{Binding CurrentOriginAxisLowHex, Mode=OneWay}" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- 입력/적용 그룹 -->
                <GroupBox Header="원점좌표계 값 입력 및 적용" Margin="0,0,0,20" FontSize="16" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Change Value" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="14"
                               ToolTip="적용할 ORIGIN AXIS 값을 10진수로 입력하세요"/>
                        <TextBox Text="{Binding ChangeAxis, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Row="0" Grid.Column="1" Height="32" FontSize="14" Margin="70,0,70,0"/>
                    </Grid>
                </GroupBox>

                <!-- 버튼 영역 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="적용" Width="140" Height="40" FontSize="15" Command="{Binding ApplyCommand}"/>
                    <Button Content="초기화" Width="160" Height="40" FontSize="15"
                            Margin="10,0,10,0" Background="#FF8A65" Foreground="White"
                            Command="{Binding ZeroParamsCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
