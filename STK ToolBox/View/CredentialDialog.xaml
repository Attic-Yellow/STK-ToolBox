<Window x:Class="STK_ToolBox.View.CredentialDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IP 계정 설정" Height="220" Width="420"
        MinHeight="200" MinWidth="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ToolTip="선택한 IP에 사용할 개별 계정(ID/비밀번호)을 설정하는 창입니다.">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- IP 표시 -->
            <RowDefinition Height="Auto"/>
            <!-- 폼 -->
            <RowDefinition Height="*"/>
            <!-- 스페이서 -->
            <RowDefinition Height="Auto"/>
            <!-- 버튼 -->
        </Grid.RowDefinitions>

        <!-- 대상 IP -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12"
                    ToolTip="계정을 설정할 대상 PC의 IP 주소입니다.">
            <TextBlock Text="대상 IP:" VerticalAlignment="Center" Margin="0,0,8,0"
                       ToolTip="현재 계정을 설정하려는 PC의 IP 주소 라벨입니다."/>
            <TextBlock x:Name="IpText"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       ToolTip="계정을 설정할 대상 PC의 IP 주소가 표시됩니다."/>
        </StackPanel>

        <!-- 폼 -->
        <Grid Grid.Row="1"
              ToolTip="이 IP에 사용할 로그인 ID와 비밀번호를 입력합니다. (해당 PC만 이 계정을 사용하게 됩니다.)">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <!-- 라벨 -->
                <ColumnDefinition Width="*"/>
                <!-- 입력 -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- ID -->
                <RowDefinition Height="10"/>
                <!-- 간격 -->
                <RowDefinition Height="Auto"/>
                <!-- PW -->
            </Grid.RowDefinitions>

            <TextBlock Text="계정(ID)"
                       Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       ToolTip="해당 PC에 접속할 때 사용할 사용자 계정(ID)입니다."/>
            <TextBox x:Name="TbUser"
                     Grid.Row="0" Grid.Column="1"
                     Height="28"
                     Margin="0,0,0,0"
                     ToolTip="이 IP에서 사용할 로그인 계정(ID)을 입력하세요." />

            <TextBlock Text="비밀번호"
                       Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       ToolTip="위 계정(ID)에 대응되는 비밀번호입니다."/>
            <PasswordBox x:Name="TbPassword"
                         Grid.Row="2" Grid.Column="1"
                         Height="28"
                         ToolTip="이 IP에서 사용할 계정의 비밀번호를 입력하세요. (화면에 노출되지 않습니다.)"/>
        </Grid>

        <!-- 버튼 -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0"
                    ToolTip="입력한 계정 정보를 저장하거나 취소할 수 있습니다.">
            <Button Content="저장"
                    Width="88"
                    Margin="0,0,8,0"
                    Click="Save_Click"
                    IsDefault="True"
                    ToolTip="입력한 계정(ID/비밀번호)을 이 IP에 대한 개별 계정으로 저장하고 창을 닫습니다."/>
            <Button Content="취소"
                    Width="88"
                    Click="Cancel_Click"
                    IsCancel="True"
                    ToolTip="변경 사항을 저장하지 않고 창을 닫습니다."/>
        </StackPanel>
    </Grid>
</Window>
