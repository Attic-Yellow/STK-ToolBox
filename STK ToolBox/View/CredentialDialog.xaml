<Window x:Class="STK_ToolBox.View.CredentialDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IP 계정 설정" Height="220" Width="420"
        MinHeight="200" MinWidth="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- IP 표시 -->
            <RowDefinition Height="Auto"/>
            <!-- 폼 -->
            <RowDefinition Height="*"/>
            <!-- 스페이서 -->
            <RowDefinition Height="Auto"/>
            <!-- 버튼 -->
        </Grid.RowDefinitions>

        <!-- 대상 IP -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="대상 IP:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBlock x:Name="IpText" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <!-- 폼 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <!-- 라벨 -->
                <ColumnDefinition Width="*"/>
                <!-- 입력 -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- ID -->
                <RowDefinition Height="10"/>
                <!-- 간격 -->
                <RowDefinition Height="Auto"/>
                <!-- PW -->
            </Grid.RowDefinitions>

            <TextBlock Text="계정(ID)" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="TbUser" Grid.Row="0" Grid.Column="1" Height="28" Margin="0,0,0,0"/>

            <TextBlock Text="비밀번호" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <PasswordBox x:Name="TbPassword" Grid.Row="2" Grid.Column="1" Height="28"/>
        </Grid>

        <!-- 버튼 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="저장" Width="88" Margin="0,0,8,0" Click="Save_Click" IsDefault="True"/>
            <Button Content="취소" Width="88" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
