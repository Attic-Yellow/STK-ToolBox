<UserControl x:Class="STK_ToolBox.View.DevicePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:ConLayOut="clr-namespace:STK_ToolBox.View">

    <UserControl.Resources>

        <!-- TabControl 스타일 재정의 -->
        <Style TargetType="Controls:MetroTabControl" BasedOn="{StaticResource {x:Type Controls:MetroTabControl}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 균등 배치 TabPanel -->
                            <UniformGrid Grid.Row="0" 
                                 IsItemsHost="True"
                                 Rows="1"
                                 HorizontalAlignment="Stretch"
                                 Margin="0,0,0,6"/>

                            <ContentPresenter Grid.Row="1"
                                      ContentSource="SelectedContent"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                      Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 탭 스타일 커스터마이즈 -->
        <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="20,8"/>
            <!-- 내부 여백 -->
            <Setter Property="MinHeight" Value="36"/>
            <!-- 최소 높이 지정 -->
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="Foreground" Value="#1565C0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        CornerRadius="6"
                        BorderBrush="#90CAF9"
                        BorderThickness="1"
                        Padding="{TemplateBinding Padding}"
                        SnapsToDevicePixels="True"
                        Margin="2,0"
                        MinHeight="{TemplateBinding MinHeight}">
                            <ContentPresenter x:Name="Content"
                                      ContentSource="Header"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- 선택된 탭 -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#64B5F6"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1E88E5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <!-- 마우스 오버 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#BBDEFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#F4F6F9">
        <avalonDock:DockingManager x:Name="DockManager">
            <avalonDock:LayoutRoot>
                <avalonDock:LayoutPanel Orientation="Horizontal">
                    <avalonDock:LayoutPanel Orientation="Vertical" DockWidth="*">
                        <avalonDock:LayoutAnchorablePane DockHeight="*">
                            <avalonDock:LayoutAnchorable Title="Device"
                                                         ContentId="DeviceView"
                                                         CanHide="False"
                                                         CanClose="False">

                                <!-- Device 탭 컨트롤 -->
                                <Controls:MetroTabControl x:Name="DeviceTabControl"
                                                          Margin="10"
                                                          FontSize="16"
                                                          TabStripPlacement="Top">
                                    <!-- 시간 동기화 -->
                                    <TabItem Header="시간 동기화">
                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="5">
                                            <ConLayOut:TimeSyncControl />
                                        </Border>
                                    </TabItem>

                                    <!-- CCTV -->
                                    <TabItem Header="CCTV">
                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="5">
                                            <ConLayOut:CameraControl />
                                        </Border>
                                    </TabItem>
                                    
                                    <!-- Inverter (CC-Link -->
                                    <TabItem Header="Inverter">
                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="5">
                                            <ConLayOut:InverterControl />
                                        </Border>
                                    </TabItem>
                                </Controls:MetroTabControl>

                            </avalonDock:LayoutAnchorable>
                        </avalonDock:LayoutAnchorablePane>
                    </avalonDock:LayoutPanel>
                </avalonDock:LayoutPanel>
            </avalonDock:LayoutRoot>
        </avalonDock:DockingManager>
    </Grid>

</UserControl>
